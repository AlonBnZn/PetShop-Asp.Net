<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/scripts/jquery.js"></script>
    <script src="~/scripts/jquery.validate.js"></script> 
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/bootstrap.bundle.js"></script>
    <script src="~/scripts/additional-methods.min.js"></script>  
    <link href="~/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/Style.css" rel="stylesheet" />
    <script src="~/scripts/Validation.js"></script>
</head>
<body>
    <header>
       <nav class="navbar navbar-expand-sm bg-body-tertiary navBarStyle">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/images/Icon.jpg" alt="Avatar Icon" class="rounded-pill icon">
                PetShop
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index" >Home</a>
                    </li>
                     <li class="nav-item">
                            <a class="nav-link" asp-action="Catalog">Catelog</a>
                     </li>
                     <li class="nav-item">
                            <a class="nav-link" asp-action="AdminPage">Admin</a>
                     </li>
                </ul>
            </div>
        </div>
       </nav>
        
    </header>
    <div>
        @RenderBody()
    </div>
    <footer class="d-flex flex-wrap justify-content-between align-items-center border-top footerStyle">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                <img src="~/images/Icon.jpg" alt="Avatar Icon" class="rounded-pill icon">
            </a>
            <span class="mb-3 mb-md-0 text-muted">© 2024 PetShop ABZ, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3"><a class="text-muted" href="https://www.linkedin.com/in/alon-ben-zaken/"><img class="bi" width="24" height="24" src="~/images/LinkedIn.png"/></a></li>
            <li class="ms-3"><a class="text-muted" href="https://www.instagram.com/_alon_benzaken/"><img class="bi" width="24" height="24" src="~/images/Instagram.png"/></a></li>
        </ul>
    </footer>
</body>
</html>
